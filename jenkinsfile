pipeline {
    agent any

    tools {
        maven 'Maven' // Assurez-vous que Maven est configur√© dans Jenkins
    }

    stages {
        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/username/repository.git', branch: 'main'
            }
        }

        stage('Build & Unit Tests') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('SonarQube Analysis') { // Ajoutez ce stage ici
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn sonar:sonar'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment steps here...'
            }
        }
    }
}
